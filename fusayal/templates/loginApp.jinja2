{% extends "bs.jinja2" %}
{% block content %}

    {% if msg|length>0 %}
    <br>
    <div class="row">
    <div class="col-md-12">
        <div class="alert alert-danger" role="alert">
            {{ msg }}
        </div>
    </div>
    </div>
    {% endif %}
    <br>

    <div class="row" id="appRow">
        <div class="col-md-12" id="appContainer">
            <div class="container-fluid" ui-view autoscroll="false">
                <div class="row">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">
                        <form action="{{request.current_route_url()}}" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="empresa"
                                           placeholder="Ingrese el codigo de la empresa">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <input type="text" class="form-control" name="usuario"
                                           placeholder="Ingrese el nombre de usuario">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <input type="password" class="form-control" name="clave"
                                           placeholder="Ingrese su clave">
                                </div>
                            </div>
                            <br>

                            <button type="submit" class="btn btn-primary">
                                Ingresar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}