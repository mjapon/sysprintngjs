{% extends "bs.jinja2" %}
{% block content %}

    {% if msg|length>0 %}
        <br>
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-danger" role="alert">
                    {{ msg }}
                </div>
            </div>
        </div>
    {% endif %}
    <br>

    <div class="row" id="appRow">
        <div class="col-md-12" id="appContainer">
            <div class="container-fluid" ui-view autoscroll="false">

                <div class="row">
                    <div class="col-md-3">

                    </div>
                    <div class="col-md-6">

                        <div class="row">
                            <div class="col-md-12">
                                <h1>Cambio de clave por defecto</h1>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="alert alert-info" role="alert">
                                    Primer acceso, favor cambiar la clave por defecto
                                </div>
                            </div>
                        </div>


                        <form action="{{ request.current_route_url() }}" method="post">

                            <div class="row">
                                <div class="col-md-12">
                                    <input type="password" class="form-control" name="clave"
                                           placeholder="Ingrese la clave">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <input type="password" class="form-control" name="confclave"
                                           placeholder="Ingreso confirmaciÃ³n de clave">
                                </div>
                            </div>
                            <br>

                            <button type="submit" class="btn btn-primary">
                                Aceptar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}